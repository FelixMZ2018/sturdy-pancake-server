<div class="container">
    <div class="home-banner text-center p-5">
        <h1>Plants</h1>
    </div>
    <div class="row justify-content-center">
        <% Plant.all.each do |plant| %>
        <div class="col-lg-4 col-12  p-2">

            <div class="card" style="height: 100%;">
                <div class="card-body">
                <div class="card-title text-center">
                    <p><strong><%=plant.name%></strong></p>
                </div>
                <div class="card-text">
                <% sensor = Sensor.where(plant_id: plant.id).first%>
                <%= sensor.Sensor_Type %>
                <%= Datapoint.where(sensor_id: sensor.id).last.value %>                
                </div>
            </div>
            </div>
        </div>


        <% end %>
    </div>
    
